<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400"
        Icon="Resource/Мастер пол.png">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,0,0,20" Text="Авторизация"/>

            <Label Content="Логин:" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox Name="textboxlogin" TextWrapping="Wrap" Width="200" Background="#FFF4E8D3" Margin="0,0,0,15"/>

            <Label Content="Пароль:" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox Name="textboxpassword" TextWrapping="Wrap" Width="200" Background="#FFF4E8D3" Margin="0,0,0,20"/>

            <Button Content="Вход" Width="200" Background="#FF67BA80" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
